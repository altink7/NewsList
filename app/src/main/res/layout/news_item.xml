<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:visibility="visible"
    http:layout_constraintBottom_toBottomOf="@+id/news_nr_id"
    http:layout_constraintTop_toBottomOf="@+id/news_nr_id">

    <TextView
        android:id="@+id/news_nr_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textAlignment="viewStart"
        http:layout_constraintBottom_toBottomOf="parent"
        http:layout_constraintStart_toStartOf="@+id/news_image"
        http:layout_constraintTop_toTopOf="parent"
        http:layout_constraintVertical_bias="0.136"
        tools:layout_conversion_absoluteHeight="45dp"
        tools:layout_conversion_absoluteWidth="392dp" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        http:layout_constraintStart_toEndOf="@+id/news_nr_id"
        http:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <TextView
        android:id="@+id/news_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        http:layout_constraintStart_toEndOf="@+id/news_nr_id"
        http:layout_constraintTop_toBottomOf="@+id/news_title"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <TextView
        android:id="@+id/news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        http:layout_constraintStart_toEndOf="@+id/news_nr_id"
        http:layout_constraintTop_toBottomOf="@+id/news_author"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <ImageView
        android:id="@+id/news_image"
        android:layout_width="409dp"
        android:layout_height="182dp"
        android:alpha="0.4"
        android:scaleType="fitXY"
        http:layout_constraintEnd_toEndOf="parent"
        http:layout_constraintHorizontal_bias="0.0"
        http:layout_constraintStart_toStartOf="parent"
        http:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="60dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <TextView
        android:id="@+id/news_description"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        http:layout_constraintEnd_toEndOf="parent"
        http:layout_constraintHorizontal_bias="0.0"
        http:layout_constraintStart_toStartOf="parent"
        http:layout_constraintTop_toBottomOf="@+id/news_image"
        tools:layout_conversion_absoluteHeight="19dp"
        tools:layout_conversion_absoluteWidth="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
